datasource db {
    provider = "mongodb"
    url      = env("MDB_URL")
}

generator client {
    provider = "prisma-client-js"
}

model users {
    id           String    @id @default(auto()) @map("_id") @db.ObjectId
    email        String    @unique
    emailConfirm Boolean   @default(false)
    userName     String    @unique
    password     String
    firstName    String
    lastName     String
    avatar       String    @default("https://images.squarespace-cdn.com/content/v1/58f7904703596ef4c4bdb2e1/1502724353318-778JDBZN2K70W5HRRGIY/no+avatar.png")
    isActive     Boolean   @default(true)
    createAt     DateTime  @default(now())
    updateAt     DateTime  @default(now())
    address      Address[]
}

type Address {
    provinceId   Int
    provinceName String
    districtId   Int
    districtName String
    wardCode     String
    wardName     String
    title        String
    id           String
}
